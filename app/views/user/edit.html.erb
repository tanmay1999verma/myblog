        <%#= f.label :user %>
        <%#= f.radio_button :roles, "user" , type: :radio %>
<!--      </div>-->
<!--      <div class="button6">-->
        <%#= f.label :user1 %>
        <%#= f.radio_button :roles, "user1" , type: :radio %>
<!--      </div>-->
<!--      <div class="button6">-->
        <%#= f.label :user2 %>
        <%#= f.radio_button :roles, "user2" , type: :radio %>
<!--      </div>-->
<!--    </div>-->

  <div class="button7">
    <%= f.submit  "Edit user" %>
  </div>
<% end %>
</div>
</div>
