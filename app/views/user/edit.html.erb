<div class="form2">
  <h2 class="text6">Edit User</h2>
<%= form_with  url: 'user_path', method: :PATCH   do |f| %>
    <% @users.errors.full_messages.each do |msg| %>
        <div><%= msg %></div>
      <% end %>
 <div class="fields">
  <div class="field2">
    <%= f.label :first_name %><br />
    <br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: current_user.first_name, :maxlength => 35 %>
  </div>
  <div class="field2">
    <%= f.label :last_name %><br />
    <br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: current_user.last_name, :maxlength => 35 %>
  </div>
 </div>
 <div class="fields">
  <div class="field2">
    <%= f.label :phone_number %><br />
    <br />
    <%= f.phone_field :phone_number, autofocus: true, autocomplete: "phone_number", placeholder: current_user.phone_number, :maxlength => 10 %>
  </div>

  <div class="field2">
    <%= f.label :email %><br />
    <br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: current_user.email %>
  </div>
 </div>
 <div class="fields">
  <div class="field2">
    <%#= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "password", placeholder: "Password", value:current_user.password ,type: :hidden%>
  </div>

  <div class="field2">
    <%#= f.label :password_confirmation %>
    <br />
    <%= f.password_field :password_confirmation, autocomplete: "password_confirmation", placeholder: "Confirm Password", value:current_user.password_confirmation ,type: :hidden %>
  </div>
 </div>
